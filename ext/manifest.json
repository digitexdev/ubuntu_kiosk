{
  "manifest_version": 3,
  "name": "PDF Download Notifier",
  "version": "1.0",
  "description": "Opens downloaded PDFs in a new full-screen window.",
  "permissions": [
    "downloads",
    "downloads.shelf",
    "windows"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
